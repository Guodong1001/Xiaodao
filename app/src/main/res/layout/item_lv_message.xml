<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px180">

    <TextView
        android:id="@+id/message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="@dimen/px_t36"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/message_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_item_title"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/px_t26dp"
        android:layout_marginBottom="@dimen/px30"
        android:text="TextView"/>

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/px30"
        android:text="TextView"
        android:textSize="@dimen/px_t22"
        android:layout_alignBottom="@+id/message_item_title"
        android:layout_marginBottom="@dimen/px10"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>