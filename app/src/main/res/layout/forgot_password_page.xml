<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px46"
                android:src="@drawable/shouji" />

            <EditText
                android:id="@+id/forget_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px88"
                android:background="#ffffff"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px46"
                android:layout_gravity="center"
                android:src="@drawable/yanzhengma" />

            <EditText
                android:id="@+id/forget_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px88"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="请输入验证码"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />

            <Button
                android:id="@+id/send_code"
                android:layout_width="@dimen/px200"
                android:layout_height="@dimen/px88"
                android:text="获取验证码" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px46"
                android:src="@drawable/mima" />

            <EditText
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px88"
                android:background="#ffffff"
                android:hint="请输入密码"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px46"
                android:src="@drawable/mima" />

            <EditText
                android:id="@+id/forget_password_angin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px88"
                android:background="#ffffff"
                android:hint="请确认密码"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>
    <TextView
        android:id="@+id/forget_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_t28"
        android:text="请输入真确的手机号"
        android:textColor="#ff0000"
        android:visibility="invisible"
        android:gravity="center"/>
    <Button
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px70"
        android:background="#ffffff"
        android:text="重置密码" />

</LinearLayout>
