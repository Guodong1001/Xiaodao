<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/about_we_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/px300"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:paddingLeft="@dimen/px30"
            android:drawableRight="@drawable/gengduo"
            android:paddingEnd="@dimen/px30"
            android:textColor="#333333"
            android:textSize="@dimen/px_t28"
            />

        <TextView
            android:id="@+id/about_we_version_number"
            android:layout_alignBottom="@+id/about_we_user_agreement"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px128"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_t22"
            android:text="版本号"
            android:textColor="#333333"/>
    </RelativeLayout>
</LinearLayout>