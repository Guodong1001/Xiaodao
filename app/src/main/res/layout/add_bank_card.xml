<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130"
        android:layout_marginTop="@dimen/px10"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_card_logo"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px30"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/bank_card_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行(7623)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px34"
            android:text="解除绑定"
            android:textColor="#333333"
            android:textSize="@dimen/px28" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px40"
            android:src="@drawable/gengduo" />
    </LinearLayout>

</LinearLayout>
