<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.view.fragment.FujinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fujin_fanhui"
            android:layout_width="10dp"
            android:layout_height="19dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/gengduo" />

        <EditText
            android:id="@+id/fujin_ed"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="@drawable/sousuojisousokuang"
            android:text="请输入商户名称"
            android:paddingLeft="30dp"
            android:textColor="#a4a4a1"
            />
        </LinearLayout>
      <HorizontalScrollView
          android:id="@+id/hsv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:id="@+id/ll_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              ></LinearLayout>
      </HorizontalScrollView>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>




</LinearLayout>
