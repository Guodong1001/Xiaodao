<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px30"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="#999999"
        android:textSize="@dimen/px_t22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持卡人"
                android:textSize="@dimen/px_t28" />

            <EditText
                android:id="@+id/na_card_people"
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:textSize="@dimen/px_t28" />

            <EditText
                android:id="@+id/bank_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:layout_weight="1"
                android:background="@null"
                android:hint="1111 2222 3333 3433" />

            <ImageView
                android:layout_width="@dimen/px88"
                android:layout_height="match_parent"
                android:src="@drawable/tianjiabangzhu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户银行"
                android:textSize="@dimen/px_t28" />

            <EditText
                android:id="@+id/open_bank_kind"
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="招商银行"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户城市"
                android:textSize="@dimen/px_t28" />

            <EditText
                android:id="@+id/open_city"
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="北京"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:textSize="@dimen/px_t28" />

            <EditText
                android:id="@+id/open_bank"
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="上地支行"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/sure_add_bank_card"
        android:layout_marginTop="@dimen/px70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="#ffffff"
        android:textSize="@dimen/px_t36"/>

</LinearLayout>
