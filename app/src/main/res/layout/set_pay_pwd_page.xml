<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/px30"
    android:orientation="vertical">

    <TextView
        android:id="@+id/input_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px30"
        android:text="请输入支付密码"
        android:textSize="@dimen/px_t28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px30">

        <TextView
            android:id="@+id/pay_pwd_01"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />

        <TextView
            android:id="@+id/pay_pwd_02"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />

        <TextView
            android:id="@+id/pay_pwd_03"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />

        <TextView
            android:id="@+id/pay_pwd_04"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />

        <TextView
            android:id="@+id/pay_pwd_05"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />

        <TextView
            android:id="@+id/pay_pwd_06"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pay_pwd_backgroud_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="@dimen/px_t80" />
    </LinearLayout>

    <Button
        android:id="@+id/next_pay_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="下一步" />

    <TextView
        android:id="@+id/text_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="两次密码不一致，请重新输入"
        android:textColor="#ff0000"
        android:textSize="@dimen/px_t28"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/number_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px100"></android.support.v7.widget.RecyclerView>
</LinearLayout>
