<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/px28"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/tubiao"
          android:layout_width="@dimen/px70"
          android:layout_height="@dimen/px70"
          android:layout_marginLeft="@dimen/px28"
          android:src="@drawable/meishitubiao"
          />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食"
            android:textSize="@dimen/px_t40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px10"
            />
    </LinearLayout>
     <GridView
         android:id="@+id/all_grid"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:numColumns="4"
         android:layout_marginLeft="@dimen/px80"
         ></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/tubiao2"
            android:layout_width="@dimen/px70"
            android:layout_height="@dimen/px70"
            android:layout_marginLeft="@dimen/px28"
            android:src="@drawable/lirentubiao"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丽人"
            android:textSize="@dimen/px_t40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px10"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/all_grid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:layout_marginLeft="@dimen/px80"
        ></GridView>
</LinearLayout>