<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_home_nearby_winport_imageView1"
            android:layout_width="@dimen/px224"
            android:layout_height="@dimen/px218"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_home_nearby_winport_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px14"
            android:text="海友良品酒店"
            android:textColor="#333333"
            android:textSize="@dimen/px_t28"/>

        <TextView
            android:id="@+id/item_home_nearby_winport_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px15"
            android:text="[安贞门]"
            android:textColor="#999999"
            android:textSize="@dimen/px_t22"/>
    </LinearLayout>

</LinearLayout>
