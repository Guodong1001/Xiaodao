<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="23dp"
                android:src="@drawable/shouji" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/px88"
                android:background="#ffffff"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/px30">

            <ImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px46"
                android:src="@drawable/shouji" />

            <EditText
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px88"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#999999" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px70"
        android:background="#ffffff"
        android:text="登录"
        android:textSize="@dimen/px_t40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码？"
            android:textColor="#999999"
            android:textSize="@dimen/px_t28" />
    </RelativeLayout>

</LinearLayout>
