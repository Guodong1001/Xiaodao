<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F4F5"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px450"
                android:background="#E8E8E8">

                <com.youth.banner.Banner
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.youth.banner.Banner>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/home_class_framelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px360"
                android:layout_marginTop="@dimen/px20"
                android:background="#ffffff">

                <RadioGroup
                    android:id="@+id/home_class_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/home_class_rb1"
                        android:layout_width="@dimen/px24"
                        android:layout_height="@dimen/px24"
                        android:background="@drawable/selector_rb_dot"
                        android:button="@null"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/home_class_rb2"
                        android:layout_width="@dimen/px24"
                        android:layout_height="@dimen/px24"
                        android:layout_marginLeft="@dimen/px20"
                        android:background="@drawable/selector_rb_dot"
                        android:button="@null"/>

                </RadioGroup>

                <android.support.v4.view.ViewPager
                    android:id="@+id/home_class_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/px43"
                    android:paddingLeft="@dimen/px30"
                    android:paddingRight="@dimen/px30"
                    android:paddingTop="@dimen/px9">
                </android.support.v4.view.ViewPager>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px366"
                android:layout_marginTop="@dimen/px20"

                >

                <FrameLayout
                    android:id="@+id/home_recommend"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    >

                    <ImageView
                        android:id="@+id/home_recommend_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/home_recommend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px50"
                        android:layout_marginTop="@dimen/px60"
                        android:ems="1"
                        android:lineSpacingExtra="@dimen/px20"
                        android:text="旺铺推荐"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_t36"
                        />


                </FrameLayout>

                <LinearLayout
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px2"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/home_function"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px0"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        >
                        <!--福利-->
                        <TextView
                            android:id="@+id/home_function_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px40"
                            android:text="暖 心 福 利"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_t36"/>

                        <TextView
                            android:id="@+id/home_function_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/home_function_title"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px20"
                            android:text="新用户优惠"
                            android:textColor="#999999"
                            android:textSize="@dimen/px_t22"
                            tools:ignore="HardcodedText,RtlHardcoded,SmallSp"/>

                        <ImageView
                            android:id="@+id/home_function_img"
                            android:layout_width="@dimen/px150"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_launcher"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/home_moment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px0"
                        android:layout_marginTop="@dimen/px2"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        >
                        <!--新功能-->
                        <TextView
                            android:id="@+id/home_moment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px40"
                            android:text="大 道 时 刻"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_t36"/>

                        <TextView
                            android:id="@+id/home_moment_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/home_moment_title"
                            android:layout_marginLeft="@dimen/px30"
                            android:layout_marginTop="@dimen/px20"
                            android:text="新功能上线"
                            android:textColor="#999999"
                            android:textSize="@dimen/px_t22"/>

                        <ImageView
                            android:id="@+id/home_moment_img"
                            android:layout_width="@dimen/px150"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_launcher"
                            />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px438"
                android:layout_marginTop="@dimen/px20"
                android:background="#ffffff"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px88">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="附 近 旺 铺"/>

                    <ImageView
                        android:id="@+id/home_nearby_img"
                        android:layout_width="@dimen/px88"
                        android:layout_height="@dimen/px88"
                        android:layout_gravity="right"
                        android:padding="@dimen/px20"
                        android:src="@drawable/fujindingwei"
                        />
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_fujin_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/px30"
                    >

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px20"
                android:orientation="vertical"
                >

                <RadioGroup
                    android:id="@+id/home_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/home_rb_cate"
                        style="@style/Home.Radiobutton"
                        android:checked="true"
                        android:gravity="center"
                        android:tag="0"
                        android:text="美食"
                        android:textColor="#ff0000"/>

                    <RadioButton
                        android:id="@+id/home_rb_recreation"
                        style="@style/Home.Radiobutton"
                        android:gravity="center"
                        android:tag="1"
                        android:text="休闲娱乐"/>

                    <RadioButton
                        android:id="@+id/home_rb_life"
                        style="@style/Home.Radiobutton"
                        android:gravity="center"
                        android:tag="2"
                        android:text="生活服务"/>

                    <RadioButton
                        android:id="@+id/home_rb_grogshop"
                        style="@style/Home.Radiobutton"
                        android:gravity="center"
                        android:tag="3"
                        android:text="酒店"/>

                    <RadioButton
                        android:id="@+id/home_rb_all"
                        style="@style/Home.Radiobutton"
                        android:gravity="center"
                        android:tag="4"
                        android:text="全部"/>
                </RadioGroup>

                <FrameLayout
                    android:id="@+id/home_class_show_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px2"
                    android:background="#ffffff">

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px89"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px38"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:background="@drawable/beijingyuanjiao"
            android:drawableRight="@drawable/xiala"
            android:text="北京"
            android:textSize="@dimen/px_t28"/>

        <EditText
            android:id="@+id/home_sousuo"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px57"
            android:layout_marginRight="@dimen/px40"
            android:layout_weight="1"
            android:background="@drawable/sousuojisousokuang"
            android:hint="麻辣小龙虾"
            android:paddingLeft="53dp"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/home_message"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:layout_gravity="center_vertical"
            android:background="@drawable/beijingyuan"
            android:padding="@dimen/px10"
            android:src="@drawable/xiaoxi"
            />

        <ImageView
            android:id="@+id/home_richscan"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:background="@drawable/beijingyuan"
            android:padding="@dimen/px10"
            android:src="@drawable/saoyisaoo"
            />
    </LinearLayout>
</FrameLayout>
