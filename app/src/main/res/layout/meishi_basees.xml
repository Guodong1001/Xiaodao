<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/px30"
    android:layout_marginRight="@dimen/px30"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/meishi_image"
            android:layout_width="@dimen/px176"
            android:layout_height="@dimen/px134"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/px34"
            android:layout_marginBottom="@dimen/px34"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px134"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/px34"
            android:layout_marginTop="@dimen/px34"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/meishi_tex1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:layout_weight="1"
                android:text="798咖啡"
                android:textSize="@dimen/px_t24"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/meishi_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分率15%"
                android:layout_marginLeft="@dimen/px20"
                android:textColor="#333333"
                android:textSize="@dimen/px_t24"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/meishi_text3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px134"
            android:text="安贞距您100m"
            android:textColor="#999999"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/px34"
            />
    </LinearLayout>

</LinearLayout>
