<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px360" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px180"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粗陶管（安贞桥东店）"
                android:textSize="@dimen/px_t28"
                android:textColor="#000000"/>
            <RatingBar
                android:layout_marginTop="@dimen/px30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px28"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:stepSize="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分率"
                android:textSize="@dimen/px36"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                android:textSize="@dimen/px36"
                android:textColor="#ff0000"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#888888"/>
    <TextView
        android:layout_marginLeft="@dimen/px30"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px60"
        android:text="  粗陶管（安贞桥东店）"
        android:gravity="center"
        android:drawableLeft="@drawable/shouji"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#888888"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px270">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:text="  粗陶管（安贞桥东店）"
                android:gravity="center"
                android:drawableLeft="@drawable/shouji"/>
            <TextView
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:text="  每满100元减15元，周一至周日10:00-21:00可用"
                android:gravity="center"
                android:drawableLeft="@drawable/shouji"/>
            <TextView
                android:layout_marginLeft="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:text="  120元双人情侣套餐（限一份）"
                android:gravity="center"
                android:drawableLeft="@drawable/shouji"/>


        </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:text="  商户信息"
            android:gravity="center"/>
        <ImageView
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px60"
            android:src="@drawable/gengduo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px15"/>
    </RelativeLayout>

    <TextView
        android:layout_margin="@dimen/px30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一大段话这是一大段话这是一大段话这是一大段话这是一大段话这是一大段话这是一大段话这是一大段话这是一大段这这是一大段话"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#888888"/>
    <TextView
        android:layout_marginLeft="@dimen/px30"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px60"
        android:text="营业时间:10:00-21:00"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#888888"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:text="  WIFI"
            android:gravity="center"
            android:drawableLeft="@drawable/shouji"/>
        <TextView
            android:layout_marginLeft="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60"
            android:text="  停车"
            android:gravity="center"
            android:drawableLeft="@drawable/shouji"/>
    </LinearLayout>

</LinearLayout>
