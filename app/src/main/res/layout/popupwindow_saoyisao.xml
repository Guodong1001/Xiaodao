<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/duihuakuang"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_saoyisao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/saosao"
            android:gravity="center"
            android:paddingBottom="@dimen/px36"
            android:paddingLeft="@dimen/px30"
            android:paddingTop="@dimen/px30"
            android:layout_marginTop="@dimen/px10"
            android:text="扫一扫"
            android:textSize="@dimen/px_t36"/>

        <TextView
            android:id="@+id/popup_fukuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fukuanma"
            android:gravity="center"
            android:paddingBottom="@dimen/px36"
            android:paddingLeft="@dimen/px30"
            android:paddingTop="@dimen/px30"
            android:text="付款码"
            android:textSize="@dimen/px_t36"/>

    </LinearLayout>


</LinearLayout>
