<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdede"
    android:orientation="vertical">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px32"
            android:text="第三方支付"
            android:textSize="@dimen/px28" />

        <LinearLayout
            android:id="@+id/binding_weixin_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px130"
            android:layout_marginTop="@dimen/px10"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_marginLeft="@dimen/px30"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px34"
                android:text="绑定微信支付"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px40"
                android:src="@drawable/gengduo" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px20"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/binding_zhifubao_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px130"
            android:layout_marginTop="@dimen/px10"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_marginLeft="@dimen/px30"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px34"
                android:text="支付宝已绑定"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px40"
                android:src="@drawable/gengduo" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px32"
            android:text="第三方支付"
            android:textSize="@dimen/px28" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bank_card_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/add_bank_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px130"
            android:layout_marginTop="@dimen/px20"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px34"
                android:layout_weight="1"
                android:text="添加银行卡"
                android:textColor="#333333"
                android:textSize="@dimen/px28" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px40"
                android:src="@drawable/gengduo" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
