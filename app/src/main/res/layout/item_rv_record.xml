<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px180"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:paddingBottom="@dimen/px1"
        android:paddingLeft="@dimen/px1"
        android:paddingRight="@dimen/px1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/rebate_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px30">

                <TextView
                    android:id="@+id/rebate_rv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="肯德基"
                    android:textColor="#000000"
                    android:textSize="@dimen/px_t28"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/px30">

                <TextView
                    android:id="@+id/rebate_rv_item_txt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.00"
                    android:textColor="#000000"
                    android:textSize="@dimen/px_t28"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#000000"
                    android:textSize="@dimen/px_t28"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">


                <TextView
                    android:id="@+id/rebate_rv_item_txt_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+50.00"
                    android:textColor="#C20000"
                    android:textSize="@dimen/px_t36"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/record_rv_item_img"
                    android:layout_width="@dimen/px50"
                    android:layout_height="@dimen/px50"
                    android:layout_marginRight="@dimen/px30"
                    android:src="@mipmap/ic_launcher_round"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_taxes_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rebate_layout"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/record_rv_item_txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/px20"
                    android:text="日期"
                    android:textColor="#999999"
                    android:layout_marginRight="@dimen/px10"
                    android:textSize="@dimen/px_t22"/>

                <TextView
                    android:id="@+id/record_rv_item_txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textColor="#999999"
                    android:textSize="@dimen/px_t22"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>