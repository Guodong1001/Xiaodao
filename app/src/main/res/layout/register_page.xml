<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header_wode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/px186"
        android:layout_height="@dimen/px182"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px60"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/register_input_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px60"
        android:background="#ffffff"
        android:drawableRight="@drawable/shouji"
        android:hint="请输入新的手机号"
        android:inputType="number"
        android:paddingLeft="@dimen/px30"
        android:paddingRight="@dimen/px30"
        android:textColorHint="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_input_verification_code"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/px30"
            android:textColorHint="#999999" />

        <Button
            android:id="@+id/get_verification_code"
            android:layout_width="@dimen/px0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px20"
            android:layout_weight="2"
            android:background="#ffffff"
            android:text="获取验证码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/px30">

        <EditText
            android:id="@+id/register_set_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="请输入密码"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30" />

        <CheckBox
            android:id="@+id/password_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px30"
            android:inputType="textPassword"
            android:background="@drawable/password_visibility"
            android:button="@null" />
    </LinearLayout>
    <TextView
        android:id="@+id/register_prompted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机号输入不正确"
        android:textSize="@dimen/px30"
        android:gravity="center"
        android:textColor="#ff0000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px30"
        android:layout_marginTop="@dimen/px30">

        <CheckBox
            android:id="@+id/is_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意大道"
            android:textSize="@dimen/px_t28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大道协议"
            android:textColor="#2f87cf"
            android:textSize="@dimen/px_t28" />
    </LinearLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:background="#ffffff"
        android:text="提交" />
</LinearLayout>
