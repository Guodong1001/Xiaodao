<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/px30"
    android:layout_marginRight="@dimen/px30"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meishi_image"
            android:layout_width="@dimen/px176"
            android:layout_height="@dimen/px134"
            android:layout_marginBottom="@dimen/px34"
            android:layout_marginTop="@dimen/px34"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px134"
            android:layout_marginBottom="@dimen/px34"
            android:layout_marginTop="@dimen/px34"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meishi_tex1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20"
                android:layout_weight="1"
                android:text="798咖啡"
                android:textColor="#333333"
                android:textSize="@dimen/px_t28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                >

                <TextView
                    android:id="@+id/meishi_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:text="50"
                    android:textColor="#999999"
                    android:textSize="@dimen/px_t24"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/人"
                    android:textColor="#999999"
                    android:textSize="@dimen/px_t24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meishi_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:text="积分率"
                    android:textColor="#333333"
                    android:textSize="@dimen/px_t24" />

                <TextView
                    android:id="@+id/meishi_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:textColor="#bd3a3a"
                    android:textSize="@dimen/px_t24" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/meishi_text5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px134"
            android:layout_marginTop="@dimen/px34"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="安贞距您100m"
            android:textColor="#999999" />
    </LinearLayout>

</LinearLayout>